{% extends 'admin/base.html.twig' %}

{% block title %}Correction d'un commentaire
{% endblock %}

{% block body %}
<div class="container">
	<h1>Modification du commentaire n° {{ comment.id }}</h1>
    <div class="card bg-light">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Annonce</th>
                    <th>Auteur</th>
                    <th>Date de création</th>
                    <th>Note donnée</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ comment.ad.title }} </td>
                    <td>{{ comment.author.fullName }} </td>
                    <td>{{ comment.createdAd | date('d/m/Y')}} </td>
                    <td>{{ comment.rating }}</td>
                </tr>
            </tbody>
        </table>
    </div>
	{{ form_start(form) }}
	<div class="row">
		<div class="col">
			<div class="card bg-light">
				<div class="card-header">
					<h4 class="card-title">Corriger l'annonce</h4>
				</div>
				<div class="card-body">
					{{ form_widget(form) }}
					<button type="submit" class="btn btn-primary mt-3">
						<i class="fas fa-check"></i>
						Enregistrer
					</button>
				</div>
			</div>
		</div>		
		</div>
	</div>
	{{ form_end(form) }}
</div>

	
{% endblock %}

