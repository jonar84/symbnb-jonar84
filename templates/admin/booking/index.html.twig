{% extends 'admin/base.html.twig' %}

{% block title %}La liste des reservations
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Administration des reservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Dur√©e</th>
                    <th>Montant</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                {% for booking in pagination.data %}
                    <tr>
                        <td>{{ booking.id }}</td>
                        <td>{{ booking.startDate | date('d/m/Y')}}</td>
                        <td>
                            <img src="{{ booking.booker.picture }}" alt="avatar de {{ booking.booker.fullName }}" class="avatar avatar-micro mr-2">
                            {{ booking.booker.fullName}}
                        </td>
                        <td>{{ booking.ad.title }} </td>
                        <td>Test</td>
                        <td>{{ booking.amount}} &euro;</td>
                        <td>
                            <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>	
        {{ pagination.display() }}
	</div>
{% endblock %}

